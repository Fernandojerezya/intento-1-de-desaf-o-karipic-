<nav>
  <ul>
    <li><%= link_to 'Inicio', root_path %></li>
    <% if user_signed_in? %>
    <li>
        <%= link_to "Cerrar sesión", destroy_user_session_path, data: { turbolinks: false } %>
    </li>
    <% else %>
      <li><%= link_to 'Iniciar sesión', new_user_session_path %></li>
      <li><%= link_to 'Registrarse', new_user_registration_path %></li>
    <% end %>
  </ul>
  <div class="navbar-right">
    <% if user_signed_in? %>
      <!-- Mostrar miniatura de la imagen de perfil si el usuario ha iniciado sesión -->
      <% if current_user.profile_photo.attached? %>
        <%= image_tag current_user.profile_photo.variant(resize: "40x40"), class: "profile-thumbnail" %>
      <% else %>
        <!-- Si el usuario no tiene una imagen de perfil, mostrar un icono o una imagen por defecto -->
        <%= image_tag "default_profile_thumbnail.png", class: "profile-thumbnail" %>
      <% end %>
    <% else %>
     
    <% end %>
  </div>
</nav>
